# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "kavak-agent"
environment  = "production"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"

# ECS Configuration
ecs_desired_count = 2
ecs_min_capacity   = 1
ecs_max_capacity   = 10
ec2_instance_type  = "t3.medium"

# Aurora Configuration
aurora_instance_class = "db.serverless"
aurora_min_capacity   = 0.5
aurora_max_capacity   = 16
db_name               = "kavak_db"
db_username           = "kavak_user"

# Note: db_username is sensitive and should be set via environment variable or terraform.tfvars (not committed)
# Example: export TF_VAR_db_username=your_username

# Bastion Host Configuration (for database access)
# bastion_allowed_ip_cidr = "YOUR_IP/32"  # Your public IP address (e.g., 189.250.78.17/32)
# bastion_key_pair_name = "your-key-pair-name"  # Optional: AWS Key Pair name for SSH access
